{
    "plugins": ["prettier-plugin-tailwindcss"],
    "tailwindFunctions": ["tv"],
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "bracketSpacing": true,
    "proseWrap": "preserve",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2,
                "printWidth": 100,
                "trailingComma": "none",
                "bracketSpacing": true,
                "proseWrap": "preserve"
            }
        }
    ]
}
